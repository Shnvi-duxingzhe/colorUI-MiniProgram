        <ui-title title="普通边框" depth="2" isIcon/>
        <view class="ui-BG radius text-center">
            <view class="p-3">
                <view class="border p-3" data-value="border" bindtap="bgCopy">四周全边框</view>
            </view>
            <view class="p-3">
                <view class="border-top p-3" data-value="border-top" bindtap="bgCopy">顶部边框</view>
            </view>
            <view class="p-3">
                <view class="border-right p-3" data-value="border-right" bindtap="bgCopy">右边边框</view>
            </view>
            <view class="p-3">
                <view class="border-bottom p-3" data-value="border-bottom" bindtap="bgCopy">底部边框</view>
            </view>
            <view class="p-3">
                <view class="border-left p-3" data-value="border-left" bindtap="bgCopy">左边边框</view>
            </view>
        </view>

        <ui-title title="粗边框" depth="2" isIcon/>
        <view class="ui-BG radius text-center">
            <view class="p-3">
                <view class="borders p-3" data-value="borders" bindtap="bgCopy">四周全粗边框</view>
