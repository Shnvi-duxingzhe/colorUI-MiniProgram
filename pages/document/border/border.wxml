                <view class="borders-right p-3" data-value="borders-right" bindtap="bgCopy">右边粗边框</view>
            </view>
            <view class="p-3">
                <view class="borders-bottom p-3" data-value="borders-bottom" bindtap="bgCopy">底部粗边框</view>
