                <view class="borders-left p-3" data-value="borders-left" bindtap="bgCopy">左边粗边框</view>
            </view>
        </view>

        <ui-title title="虚线边框" depth="2" isIcon/>
        <view class="ui-BG radius text-center">
            <view class="p-3">
                <view class="dashed p-3" data-value="dashed" bindtap="bgCopy">四周全虚线边框</view>
            </view>
            <view class="p-3">
                <view class="dashed-top p-3" data-value="dashed-top" bindtap="bgCopy">顶部虚线边框</view>
            </view>
            <view class="p-3">
                <view class="dashed-right p-3" data-value="dashed-right" bindtap="bgCopy">右边虚线边框</view>
            </view>
            <view class="p-3">
                <view class="dashed-bottom p-3" data-value="dashed-bottom" bindtap="bgCopy">底部虚线边框</view>
            </view>
            <view class="p-3">
                <view class="dashed-left p-3" data-value="dashed-left" bindtap="bgCopy">左边虚线边框</view>
            </view>
            <view class="p-3">
                <view class="dasheds p-3" data-value="dasheds" bindtap="bgCopy">四周全粗虚线边框</view>
            </view>
            <view class="p-3">
                <view class="dasheds-top p-3" data-value="dasheds-top" bindtap="bgCopy">顶部粗虚线边框</view>
            </view>
            <view class="p-3">
                <view class="dasheds-right p-3" data-value="dasheds-right" bindtap="bgCopy">右边粗虚线边框</view>
