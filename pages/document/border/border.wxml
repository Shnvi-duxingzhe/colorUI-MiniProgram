        <ui-title title="边框颜色" depth="2" isIcon/>
        <view class="ui-BG radius text-center">
            <view class="p-3">
                <view class="border border-red p-3" data-value="border border-red" bindtap="bgCopy">红色边框</view>
            </view>
            <view class="p-3">
                <view class="borders border-blue p-3" data-value="borders border-blue" bindtap="bgCopy">蓝色边框</view>
            </view>
            <view class="p-3">
                <view class="dasheds border-orange p-3" data-value="dasheds border-orange" bindtap="bgCopy">橙色虚线边框</view>
            </view>
            <view class="p-3">
                <view class="borders main-a-border p-3" data-value="borders main-a-border" bindtap="bgCopy">主颜色边框</view>
            </view>
        </view>

        <ui-title title="动感边框" depth="2" isIcon/>
        <view class="ui-BG radius text-center">
            <view class="p-3">
                <view class="dasheds-shine p-3" data-value="dasheds-shine" bindtap="bgCopy">粗虚线边框动画</view>
            </view>
            <view class="p-3">
                <view class="dashed-shine border-blue p-3" data-value="dashed-shine border-blue" bindtap="bgCopy">蓝色虚线边框动画</view>
            </view>
        </view>

    </view>
</ui-sys>
