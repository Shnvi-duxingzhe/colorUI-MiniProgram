<ui-sys doc title="选项卡">

    <ui-title title="默认" depth="2" isIcon ui="mx-4"/>
    <ui-tab tab="{{['选项卡1','选项卡2','选项卡3']}}"/>

    <ui-title title="标记在上" depth="2" isIcon ui="mx-4"/>
    <ui-tab tab="{{['选项卡1','选项卡2','选项卡3']}}" tpl="topline"/>

    <ui-title title="点标记" depth="2" isIcon ui="mx-4"/>
    <ui-tab tab="{{['选项卡1','选项卡2','选项卡3']}}" tpl="dot"/>

    <ui-title title="短划线标记" depth="2" isIcon ui="mx-4"/>
    <ui-tab tab="{{['选项卡1','选项卡2','选项卡3']}}" tpl="long"/>

    <ui-title title="梯形标记" depth="2" isIcon ui="mx-4"/>
    <ui-tab tab="{{['选项卡1','选项卡2','选项卡3']}}" tpl="trapezoid"/>

    <ui-title title="按钮标记" depth="2" isIcon ui="mx-4"/>
    <ui-tab tab="{{['选项卡1','选项卡2','选项卡3']}}" tpl="btn" mark="bg-red round" curColor="text-white"/>

    <ui-title title="分段器1" depth="2" isIcon ui="mx-4"/>
    <view class="ui-BG-3 p-3 text-center">
        <ui-tab tab="{{['选项卡1','选项卡2','选项卡3','选项卡4']}}" tpl="btn" mark="bg-red radius" ui="radius" curColor="text-white" inline/>
    </view>
    <ui-title title="分段器2" depth="2" isIcon ui="mx-4"/>
    <view class="p-3 text-center">
        <ui-tab tab="{{['选项卡1','选项卡2','选项卡3','选项卡4']}}" tpl="btn" mark="ui-BG radius" ui="radius ui-BG-4" inline/>
    </view>

    <ui-title title="分段器3" depth="2" isIcon ui="mx-4"/>
    <view class="p-3 text-center">
        <ui-tab tab="{{['选项卡1','选项卡2','选项卡3','选项卡4','选项卡5','选项卡6','选项卡7']}}"
                tpl="btn" mark="ui-BG radius" ui="radius ui-BG-4" inline scroll width="100%"/>
    </view>

    <ui-title title="分段器4" depth="2" isIcon ui="mx-4"/>
    <view class="p-3 text-center">
        <ui-tab tab="{{['选项卡1','选项卡2','选项卡3','选项卡4']}}" tpl="btn" mark="bg-white radius" ui="bg-red radius" curColor="text-red" inline/>
    </view>


    <ui-title title="等分" depth="2" isIcon ui="mx-4"/>
    <view class="px-5">
        <ui-tab tab="{{['选项卡1', '选项卡2', '选项卡3', '选项卡4']}}" value="{{2}}" align="flex-bar"/>
    </view>

    <ui-title title="居中" depth="2" isIcon ui="mx-4"/>
    <ui-tab tab="{{['选项卡1', '选项卡2', '选项卡3']}}" align="flex-center"/>

    <ui-title title="滚动" depth="2" isIcon ui="mx-4"/>
    <ui-tab tab="{{['选项卡1', '选项卡2', '选项卡3', '选项卡4', '选项卡5', '选项卡6']}}" scroll/>

    <ui-title title="背景" depth="2" isIcon ui="mx-4"/>
    <ui-tab ui="bg-red" mark="text-white" tab="{{['选项卡1', '选项卡2', '选项卡3']}}" curColor="text-white"/>

    <ui-title title="绑定值" depth="2" isIcon ui="mx-4"/>
    <view class="p-4">data => NavCur:{{ NavCur }}</view>
    <ui-tab tab="{{['选项卡1', '选项卡2', '选项卡3']}}" value="{{NavCur}}" bind:change="tabNavChange"/>

    <ui-title title="事件/多数据" depth="2" isIcon ui="mx-4"/>

    <view class="p-4">@change => 输出 {{ change }}</view>
    <ui-tab tab="{{[{name:'选项卡1',icon:'cicon-github text-red'},{name:'选项卡2',tag:''},{name:'选项卡3',tag:'hot'}]}}" bind:change="tabChange"/>
</ui-sys>
