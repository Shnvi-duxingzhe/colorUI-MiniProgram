<ui-sys title="主题">
    <view class="ui-container">

        <ui-title title="简介" depth="2" isIcon/>
        <view class="paragraph">ColorUI支持多款配色的主题方案,也支持根据系统来适配暗色主题。</view>

        <ui-title title="主题切换组件" depth="2" isIcon/>
        <ui-change-theme ui="radius border"/>

        <ui-title title="配色展示" depth="2" isIcon/>
        <view class="ui-BG radius border">
            <view class="p-4 flex">
                <view class="ui-BG-Main p-4 mr-2 radius flex-sub"/>
                <view class="ui-BG-Main-1 p-4 mx-2 radius flex-sub"/>
                <view class="ui-BG-Main-2 p-4 mx-2 radius flex-sub"/>
                <view class="ui-BG-Main-3 p-4 mx-2 radius flex-sub"/>
                <view class="ui-BG-Main-4 p-4 ml-2 radius flex-sub"/>
            </view>
            <view class="p-4 ui-BG-3 text-center">
                <text class="ui-TC text-sm m-3">Aa</text>
                <text class="ui-TC-1 text-sm m-3">Bb</text>
                <text class="ui-TC-2 text-sm m-3">Cc</text>
                <text class="ui-TC-3 text-sm m-3">Dd</text>
                <text class="ui-TC-4 text-sm m-3">Ee</text>
            </view>
        </view>
        <view class="ui-BG radius border mt-4">
            <view class="p-5 flex"/>
            <view class="p-4 flex ui-BG-3"/>
        </view>
        <view class="p-3 flex justify-center flex-sub">
            <view class="p-3 ui-BG-1 radius text-xs">
                <text class="ui-TC-Main">Current</text>
                <text class="ui-TC-Main-2 ml-3">Disabled</text>
                <text class="ui-TC ml-3">Default</text>
            </view>
        </view>

    </view>
</ui-sys>
